//Jenkins file only to tutorial example
pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/nickgulrajani/node-todo-frontend.git'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install'
        sh 'npm audit fix'
      } 
     }
    
     
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }      
  }
}
